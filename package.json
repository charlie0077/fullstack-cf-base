{
	"name": "my-hono-app",
	"type": "module",
	"scripts": {
		"dev": "concurrently -n client,server -c blue,green \"bun run dev:client\" \"bun run dev:server\"",
		"dev:client": "vite",
		"dev:server": "vite dev --config vite.config.server.ts",
		"build": "vite build && vite build --config vite.config.server.ts",
		"preview": "bun run build && wrangler pages dev dist",
		"deploy": "bun run build && wrangler pages deploy dist",
		"cf-typegen": "wrangler types --env-interface CloudflareBindings",
		"lint": "eslint ."
	},
	"dependencies": {
		"@hono/trpc-server": "^0.4.2",
		"@tanstack/react-query": "^5.90.21",
		"@trpc/client": "^11.10.0",
		"@trpc/react-query": "^11.10.0",
		"@trpc/server": "^11.10.0",
		"hono": "^4.11.9",
		"react": "^19.2.4",
		"react-dom": "^19.2.4",
		"react-router": "^7.13.0",
		"superjson": "^2.2.6",
		"zod": "^4.3.6"
	},
	"devDependencies": {
		"@eslint/js": "^10.0.1",
		"@hono/vite-build": "^1.2.0",
		"@hono/vite-dev-server": "^0.18.2",
		"@types/node": "^25.2.3",
		"@types/react": "^19.2.14",
		"@types/react-dom": "^19.2.3",
		"@vitejs/plugin-react": "^5.1.4",
		"concurrently": "^9.2.1",
		"eslint": "^10.0.0",
		"eslint-plugin-react-hooks": "^7.0.1",
		"eslint-plugin-react-refresh": "^0.5.0",
		"globals": "^17.3.0",
		"typescript-eslint": "^8.55.0",
		"vite": "^6.3.5",
		"wrangler": "^4.65.0"
	}
}